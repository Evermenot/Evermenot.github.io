// Custom styles.
.site-meta {
    padding: 40px 0;
    color: #fff;
    background: #8b5a00;
    background-image: linear-gradient(90deg, #f79533 0%, #f37055 15%, #ef4e7b 30%, #a166ab 44%, #5073b8 58%, #1098ad 72%, #07b39b 86%, #6dba82 100%);
}

.headband {
    height: 3px;
    background: #8b5a00;
    background-image: linear-gradient(90deg, #f79533 0%, #f37055 15%, #ef4e7b 30%, #a166ab 44%, #5073b8 58%, #1098ad 72%, #07b39b 86%, #6dba82 100%);
}

/* 设置滚动条的样式 */
::-webkit-scrollbar {
    width: 3px;
    height: 3px;
}
/* 滚动槽 */
::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, .1);
}
/* 滚动条滑块 */
::-webkit-scrollbar-thumb {
    border-radius: 2px;
    background: rgba(144, 144, 144, .8);
    background: linear-gradient(90deg, #f79533 0%, #f37055 15%, #ef4e7b 30%, #a166ab 44%, #5073b8 58%, #1098ad 72%, #07b39b 86%, #6dba82 100%);
}
::-webkit-scrollbar-thumb:vertical {
    background: linear-gradient(#f79533 0%, #f37055 15%, #ef4e7b 30%, #a166ab 44%, #5073b8 58%, #1098ad 72%, #07b39b 86%, #6dba82 100%);
}
::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 118, 0, .8);
}

